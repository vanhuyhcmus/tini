{
  "tagVersionPrefix": "v",
  "packages": ["packages/*"],
  "useWorkspaces": true,
  "command": {
    "version": {
      "message": "chore(release): publish %s",
      "allowBranch": "master",
      "exact": true,
      "createRelease": "github",
      "conventionalCommits": true
    },
    "bootstrap": {
      "hoist": true
    },
    "publish": {
      "conventionalCommits": true,
      "message": "chore(release): publish %s",
      "registry": "https://npm.pkg.github.com",
      "allowBranch": "master"
    }
  },
  "version": "0.27.0"
}
