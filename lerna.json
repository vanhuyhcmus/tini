{
  "tagVersionPrefix": "v",
  "packages": ["packages/*"],
  "useWorkspaces": true,
  "command": {
    "version": {
      "message": "chore(release): publish %s",
      "allowBranch": "master",
      "exact": true,
      "createRelease": "github",
      "conventionalCommits": true
    },
    "bootstrap": {
      "hoist": true
    }
  },
  "version": "0.27.0"
}
